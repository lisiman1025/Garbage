<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="5dp"
    >
    <TextView
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:background="@drawable/title"
     />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/search"
            android:background="@drawable/shape_edit"
            android:layout_width="225dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:paddingStart="20dp"
            android:maxLength="10"
            android:maxLines="1"
            android:hint="@string/search"/>
        <Button
            android:id="@+id/magnifier"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/pan"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/recycle_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:background="@drawable/recycle"/>
        <TextView
            android:id="@+id/wet_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:background="@drawable/wet"/>
        <TextView
            android:id="@+id/harmful_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:background="@drawable/harmful"/>
        <TextView
            android:id="@+id/dry_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:background="@drawable/dry"/>
    </LinearLayout>
    <TextView
        android:id="@+id/garbage_in"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/recyclein"/>
</LinearLayout>